<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<Button  
 android:id="@+id/statButton1"  
 android:layout_width="170dp"  
 android:layout_height="170dp"    
 android:text="button效果演示"  
 android:layout_marginLeft="20dp"
android:layout_below="@+id/statEditText1"
 android:background="@drawable/selector1" />

 <Button  
 android:id="@+id/statButton2"  
 android:layout_width="130dp"  
 android:layout_height="130dp"  
  
 android:text="button效果演示"  
 android:layout_below="@id/statButton1"
 android:layout_alignParentRight="true"
 android:layout_marginRight="40dp"
 android:background="@drawable/selector2" /> 
 <Button  
 android:id="@+id/statButton3"  
 android:layout_width="100dp"  
 android:layout_height="100dp"  
 android:layout_below="@id/statButton2"
 android:text="button效果演示" 
 android:layout_marginLeft="60dp" 
 android:background="@drawable/selector3" />

 <TextView
     android:id="@+id/statEditText1"
     android:layout_width="80dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="30dp"
     android:layout_alignLeft="@+id/statButton1"
     android:layout_alignParentTop="true"
      
      
     android:layout_marginLeft="45dp"
     android:gravity="center"
     android:text="效果演示"
     android:textColor="#ff0033" />
  <TextView
     android:id="@+id/statEditText2"
     android:layout_width="80dp"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/statButton2"
     android:layout_above="@id/statButton2"
      
      
     android:layout_marginLeft="25dp"
     android:gravity="center"
     android:text="效果演示"
     android:textColor="#3366ff" />
   <TextView
     android:id="@+id/statEditText3"
     android:layout_width="80dp"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/statButton3"
     android:layout_above="@id/statButton3"
      
      
     android:layout_marginLeft="10dp"
     android:gravity="center"
     android:text="效果演示"
     android:textColor="#00cc00" />
 
   
</RelativeLayout>
