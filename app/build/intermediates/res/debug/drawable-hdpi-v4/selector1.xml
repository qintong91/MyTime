<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true">  
     <shape android:shape= "oval">
            <!-- 渐变 -->            
            <gradient
                android:startColor="#ffffff"
                android:endColor="#99ffff"
              />
            
            <!-- 圆角 -->
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
      </item>
 <item android:state_pressed="false">
      <shape android:shape= "oval">
            <gradient
                android:startColor="#ff9900"
                android:endColor="#ff0033"
                android:angle="270" />
            
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
  </item>    

</selector>
